---
import type { Locale } from '../i18n/translations';
import { t } from '../i18n/translations';

interface Props {
  lang?: Locale;
}

const { lang = 'cs' } = Astro.props;
const i18n = t(lang);
---

<section class="about">
  <div class="about-inner">
    <h2 class="about-title">{i18n.aboutTitle}</h2>
    <p class="about-text">{i18n.aboutText}</p>
  </div>
</section>

<style>
  .about {
    padding: var(--section-gap) 15px 0;
  }

  .about-inner {
    max-width: var(--container-max-width);
    margin: 0 auto;
  }

  .about-title {
    font-size: 28px;
    color: #13151a;
    font-weight: 700;
    margin-bottom: 0.8em;
  }

  .about-text {
    font-size: 18px;
    color: #555;
    line-height: 1.6;
  }

  @media (max-width: 600px) {
    .about-title {
      font-size: 24px;
    }

    .about-text {
      font-size: 15px;
    }
  }
</style>
